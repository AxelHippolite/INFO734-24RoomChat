<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>24Room</title>
    </head>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <body>
        <h1>Sign Up</h1>
        <input type="text" id="username" name="username" placeholder="Username"/><br><br>
        <input type="text" id="email" name="email" placeholder="E-Mail"/><br><br>
        <input type="password" id="passwd" name="passwd" placeholder="Password"/><br><br>
        <button onclick="createUser()">Sign Up</button>
        <button onclick="deleteAllUsers()">Delete All Users</button>
        <button onclick="readAllUsers()">Read All Users</button><br><br>
        <textarea id="res"></textarea>
        <p id="result"></p> 
    </body>
</html>
<script>
    function deleteAllUsers(){
        axios.delete("http://localhost:3000/api/deleteAll");
    }
    function createUser(){
        const username = document.getElementById("username").value;
        const email = document.getElementById("email").value;
        const passwd = document.getElementById("passwd").value;

        axios.post("http://localhost:3000/api/user", {username: username, password: passwd, email: email}).then(function (response) {
            document.getElementById("result").innerHTML = "<span style='color:green'>User Created ! You will be redirect soon...</span>";
            setTimeout(() => {
                window.location.href = "http://localhost:3000/home"
            }, 3000)
        });
    }
    function readAllUsers(){
        axios.get("http://localhost:3000/api/users").then(function (response) {
            document.getElementById("res").innerHTML = JSON.stringify(response.data);
        })
    }
</script>